#!/bin/bash
exec &>/dev/null
brake=0 
while [ true ]; do     
	if [ $brake -eq 20 ]; then         
		osascript -e 'tell application (path to frontmost application as text) to display dialog "look away" buttons {"OK"} with icon note giving up after 4'
		brake=0     
	else         
		sleep 60 
		brake=$[ $brake+1 ]     
	fi 
done

# for windows cmder: msg.exe /time:4 $USERNAME "look away"

